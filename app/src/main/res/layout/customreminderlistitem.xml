<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/revision1RV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:paddingBottom="5dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/custom_reminder_alarm_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="27dp"
        android:src="@drawable/ic_create_white_24dp"
        android:tint="@color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/custom_reminder_alarm_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/custom_reminder_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revision - 1"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/custom_reminder_datetimetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11/12/1994"
            android:textSize="15dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/removeFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:padding="7dp"
        android:src="@drawable/ic_close_red_24dp" />
</RelativeLayout>